# Demo Environment Configuration Example
# Copy this file to .env.demo and fill in your values
# NEVER commit actual credentials to the repository

# Demo Mode Settings
DEMO_MODE_ENABLED=true
DEMO_USER_EMAIL=your_demo_email_here
DEMO_USER_PASSWORD=your_secure_password_here
DEMO_SESSION_TIMEOUT=3600
DEMO_AUTO_RESET=false
DEMO_DATA_RESET_INTERVAL=86400

# Supabase Configuration (copy from .env.local)
NEXT_PUBLIC_SUPABASE_URL=${NEXT_PUBLIC_SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${NEXT_PUBLIC_SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}

# OpenAI Configuration (copy from .env.local)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Demo-specific limits (more permissive for demos)
OPENAI_DAILY_BUDGET_CENTS=2000

# Performance Settings
CACHE_TTL_SECONDS=300
MAX_CONCURRENT_CONNECTIONS=50
ENABLE_PERFORMANCE_MONITORING=true

# Security Settings
NODE_ENV=demo
DEMO_BYPASS_RLS=false