# Demo Environment Configuration Template
# Copy this to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Demo Configuration
DEMO_MODE_ENABLED=true
DEMO_USER_EMAIL=guest@restaurant.plate
DEMO_USER_PASSWORD=guest12345
DEMO_SESSION_TIMEOUT=3600
DEMO_AUTO_RESET=false
DEMO_DATA_RESET_INTERVAL=86400
DEMO_RESET_ON_STARTUP=false

# OpenAI Usage Limits
OPENAI_DAILY_BUDGET_CENTS=500

# Performance Settings
CACHE_TTL_SECONDS=1800
MAX_CONCURRENT_CONNECTIONS=100
ENABLE_PERFORMANCE_MONITORING=true

# Security Settings
NODE_ENV=development